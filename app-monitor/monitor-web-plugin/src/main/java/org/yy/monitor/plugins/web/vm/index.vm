<div id="main">
		<div id="content">
			<div class="pure-g">
				#foreach($entity in $data.entitys)  
				<div class="pure-u-1-3">
					<div class='app-info #if($velocityCount ==1) select #end'>
						<a href="javascript:void(0)" class="app-title">$entity.name</a>
						<div class="app-desc">
							<img style="float: left; margin-right: 15px"
								src="$entity.icon" width=80 height=80>
							$entity.desc
						</div>
					</div>
				</div>
				#end
			</div>
			
			<div class="pure-g">
				<div class="pure-u-5-5">
					<div style="margin:20px 0px 0px 30px">
						<form class="pure-form" onsubmit="return false;">
						<a class="machine-title">主机列表:</a>
						<select class="pure-u-1-4">
							<option value="$!data.entitys[0].url">集群($!data.entitys[0].url)</option>
							#foreach($node in $data.entitys[0].nodes)
							<option value="${node}">${node}</option>
							#end
						</select>
						</form>
					</div>
				</div>
			</div>

			<div class="pure-g">
				<div class="pure-u-5-5">
					<div class="monitor-list">
						<a class="monitor-title">监控请求</a>
						<table class="pure-table" style="width: 100%">
							<thead>
								<tr>
									<th width="10">#</th>
									<th>业务名称</th>
									<th>监控链接</th>
									<th>参数</th>
									<th width="180">请求总况</th>
									<th width="150">操作</th>
								</tr>
							</thead>

							<tbody>
								#foreach($entityItem in $data.entityItems)
								<tr class="pure-table-odd">
									<td>$!velocityCount</td>
									<td>$!entityItem.name</td>
									<td>$!entityItem.url</td>
									<td>$!entityItem.params</td>
									<td>总数：$!entityItem.reqTimes，失败数：$!entityItem.failureTimes</td>
									<td><a href="javascript:void(0)">查看详情</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="javascript:void(0)">测试</a></td>
								</tr>
								#end
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>